{
    "languageserver": {
        "ccls": {
            "command": "/Users/dann/4ms/ccls/Release/ccls",
            "filetypes": [
                "c",
                "cpp",
                "cc"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/"
            ],
		    "trace.server": "verbose",
            "initializationOptions": {
                "cache": {
                    "directory": "./.ccls-cache"
                },
				"clang": {
					"excludeArgs": ["-specs=nosys.specs"]
				},
				"highlight": { "lsRanges" : true }
            }
        }
    }

}
